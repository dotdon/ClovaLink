# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/clovalink?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="ClovaLink <your-email@gmail.com>"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="100000000" # 100MB in bytes

# Security
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,ppt,pptx,txt,jpg,jpeg,png,gif,svg,zip,rar,7z,csv,json,xml"

# Optional Redis Cache
# REDIS_URL="redis://localhost:6379"

# Document Settings
DOCUMENT_EXPIRY_DAYS="30"

# Application
NODE_ENV="development" 